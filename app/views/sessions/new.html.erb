
<%= provide(:title, 'Log in')%>

<br>
<div class="container sign-forms" >
<div class='row'>

    <div class='col-md-4 offset-md-4'>
    <h1>Log in</h1>
        <%= form_for(:session, url: login_path) do |f|%>
            
            <%= f.text_field :name, placeholder: 'Enter Username', class: 'form-control' %><br>
            <%= f.submit 'Submit', class: 'btn btn-info btn-block' %>
        <% end %>

        <span ><%= link_to "Sign up to the service", signup_path %> </span>
    </div>
</div>
</div>
